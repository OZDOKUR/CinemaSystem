@model Entities.Concrete.Movie
@{
    ViewData["Title"] = "EditMovie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="EditMovie" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Film Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScreenTime">Süresi</label>
        <input asp-for="ScreenTime" type="text" class="form-control" />
        <span asp-validation-for="ScreenTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Film Resmi</label>
        <div>
            <img src="@Model.Picture" alt="Film Resmi" style="max-width: 200px; max-height: 200px;" />
        </div>
        <input type="file" name="PictureFile" class="form-control mt-2" />
        <input type="hidden" name="ExistingPicture" value="@Model.Picture" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Film Arka Planı</label>
        <div>
            <img src="@Model.Background" alt="Film Arka Planı" style="max-width: 200px; max-height: 200px;" />
        </div>
        <input type="file" name="BackgroundFile" class="form-control mt-2" />
        <input type="hidden" name="ExistingBackground" value="@Model.Background" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Director">Yönetmen</label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Yönetmen Resmi</label>
        <div>
            <img src="@Model.DirectorPicture" alt="Yönetmen Resmi" style="max-width: 200px; max-height: 200px;" />
        </div>
        <input type="file" name="DirectorPicture" class="form-control mt-2" />
        <input type="hidden" name="ExistingDirectorPicture" value="@Model.DirectorPicture" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Score">Puanı</label>
        <input asp-for="Score" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Is3D">3D mi?</label>
        <input asp-for="Is3D" type="checkbox" class="form-control" />
        <span asp-validation-for="Is3D" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDubbed">Dublajlı mı?</label>
        <input asp-for="IsDubbed" type="checkbox" class="form-control" />
        <span asp-validation-for="IsDubbed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsLocal">Yerel mi?</label>
        <input asp-for="IsLocal" type="checkbox" class="form-control" />
        <span asp-validation-for="IsLocal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trailer">Fragman URL'si</label>
        <input asp-for="Trailer" class="form-control" />
        <span asp-validation-for="Trailer" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-info">Güncelle</button>
</form>
