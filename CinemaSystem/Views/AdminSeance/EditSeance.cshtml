@model Entities.Concrete.Seance

@{
    ViewData["Title"] = "EditSeance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Seance</h1>

<form asp-action="EditSeance" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Hours"></label>
        <input asp-for="Hours" type="time" class="form-control" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieId"></label>
        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieTheaterId"></label>
        <select asp-for="MovieTheaterId" class="form-control" asp-items="ViewBag.Theaters"></select>
        <span asp-validation-for="MovieTheaterId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SeatsOccupied"></label>
        <textarea asp-for="SeatsOccupied" class="form-control"></textarea>
        <span asp-validation-for="SeatsOccupied" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-info">Değiştir</button>
</form>
