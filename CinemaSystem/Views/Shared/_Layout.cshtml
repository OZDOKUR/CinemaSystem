<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaSystem.styles.css" asp-append-version="true" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/all.min.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/animate.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/odometer.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/nice-select.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/jquery.animatedheadline.css">
    <link rel="stylesheet" href="~/MovieTemp/assets/css/main.css">

    <link rel="shortcut icon" href="~/MovieTemp/assets/images/favicon.png" type="image/x-icon">

    <title>Boleto  - Online Ticket Booking Website HTML Template</title>


</head>
<body>

    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>

    <div class="overlay"></div>
    <a href="#0" class="scrollToTop">
        <i class="fas fa-angle-up"></i>
    </a>

    <header class="header-section">
        <div class="container">
            <div class="header-wrapper">
                <div class="logo">
                    <a href="~/home">
                        <img src="~/MovieTemp/assets/images/logo/logo.png" alt="logo">
                    </a>
                </div>
                <ul class="menu">
                    <li>
                        <a href="~/home" class="active">Ana Sayfa</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated){
                    <li>
                        <a href="~/Login/Index">Giriş Yap</a>
                    </li>
                    <li>
                        <a href="~/Register/Index">Kayıt Ol</a>
                    </li>
                    }

                    <li>
                        <a href="~/About/Index">Hakkımızda</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="menu">
                            <form id="logoutForm" asp-controller="Login" asp-action="LogOut" method="post">
                                <button type="submit" style="color: white; background-color: transparent; border: none;">
                                    Çıkış Yap
                                </button>
                            </form>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="header-button pr-0">
                            <a href="~/AdminDashboard/Index">Admin Paneli</a>
                        </li>
                    }
                    else if (User.IsInRole("Worker"))
                    {
                        <li class="header-button pr-0">
                            <a href="~/AdminUser/User">Çalışan Paneli</a>
                        </li>
                    }
                </ul>
                <div class="header-bar d-lg-none">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </header>

            @RenderBody()

    <footer class="footer-section">
        <div class="container">
            <div class="footer-top">
                <div class="logo">
                    <a href="index-1.html">
                        <img src="~/MovieTemp/assets/images/footer/footer-logo.png" alt="footer">
                    </a>
                </div>
                <ul class="social-icons">
                    <li>
                        <a href="#0">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0" class="active">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0">
                            <i class="fab fa-pinterest-p"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#0">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="footer-bottom">
                <div class="footer-bottom-area">
                    <div class="left">
                        <p>Bu proje <a href="#0">ONUR ÖZDOKUR</a> tarafından yapılmaktadır</p>
                    </div>
                    <ul class="links">
                        <li>
                            <a href="#0">About</a>
                        </li>
                        <li>
                            <a href="#0">Terms Of Use</a>
                        </li>
                        <li>
                            <a href="#0">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="#0">FAQ</a>
                        </li>
                        <li>
                            <a href="#0">Feedback</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/MovieTemp/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/MovieTemp/assets/js/modernizr-3.6.0.min.js"></script>
    <script src="~/MovieTemp/assets/js/plugins.js"></script>
    <script src="~/MovieTemp/assets/js/bootstrap.min.js"></script>
    <script src="~/MovieTemp/assets/js/heandline.js"></script>
    <script src="~/MovieTemp/assets/js/isotope.pkgd.min.js"></script>
    <script src="~/MovieTemp/assets/js/magnific-popup.min.js"></script>
    <script src="~/MovieTemp/assets/js/owl.carousel.min.js"></script>
    <script src="~/MovieTemp/assets/js/wow.min.js"></script>
    <script src="~/MovieTemp/assets/js/countdown.min.js"></script>
    <script src="~/MovieTemp/assets/js/odometer.min.js"></script>
    <script src="~/MovieTemp/assets/js/viewport.jquery.js"></script>
    <script src="~/MovieTemp/assets/js/nice-select.js"></script>
    <script src="~/MovieTemp/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
