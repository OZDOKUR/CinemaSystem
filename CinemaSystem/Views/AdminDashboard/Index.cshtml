@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Bilet geliri</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-title">
                    <h4>Bugünkü Gelir: @ViewBag.DailyTotal.ToString("F2") TL</h4>
                    <h4>Bu Ayın Geliri: @ViewBag.MonthlyTotal.ToString("F2") TL</h4>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Fiyat</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@item.TicketPrice.ToString("F2") TL</td> 
                                        <td>@item.SellTime.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</td> 
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Fiyat</th>
                                    <th>Tarih</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                   
                </div>
            </div>
        </div>
    </div>
</div>
