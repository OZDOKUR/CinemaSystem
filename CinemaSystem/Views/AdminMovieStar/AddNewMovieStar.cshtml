@model CinemaSystem.Models.AddMovieStarViewModel
@{
    ViewData["Title"] = "AddNewMovieStar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Film ve Oyuncu Ekleme/Çıkarma</h5>
                </div>
                <div class="ibox-content">
                    <form asp-action="AddNewMovieStar" method="post">
                        <div class="form-group">
                            <label for="MovieId">Film Seç</label>
                            <select asp-for="MovieId" class="form-control" asp-items="Model.Movies"></select>
                        </div>
                        <div class="form-group">
                            <label for="StarId">Oyuncu Seç</label>
                            <select asp-for="StarId" class="form-control" asp-items="Model.Stars"></select>
                        </div>
                        <button type="submit" class="btn btn-info">Ekle</button>
                    </form>



                </div>
            </div>
        </div>
    </div>
</div>