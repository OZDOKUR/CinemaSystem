@model CinemaSystem.Models.RemoveMovieStarViewModel

@{
    ViewData["Title"] = "RemoveMovieStar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>@Model.Movie.Name İçin Oyuncu Çıkarma</h5>
                </div>
                <div class="ibox-content">

                    
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Film</th>
                                    <th>Oyuncu</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MovieStars != null && Model.MovieStars.Any())
                                {
                                    foreach (var movieStar in Model.MovieStars)
                                    {
                                        <tr>
                                            <td>@Model.Movie.Name</td>
                                            <td>@movieStar.Star.Name</td>
                                            <td>
                                                <form asp-action="RemoveMovieStar" method="post" style="display:inline;">
                                                    <input type="hidden" name="movieName" value="@Model.Movie.Name" />
                                                    <input type="hidden" name="starName" value="@movieStar.Star.Name" />
                                                    <button type="submit" class="btn btn-danger">Sil</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">Oyuncu bulunamadı.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-info">Geri Dön</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


