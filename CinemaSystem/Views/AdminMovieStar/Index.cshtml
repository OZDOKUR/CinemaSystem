@model IEnumerable<CinemaSystem.Models.MovieStarViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <a href="~/AdminMovieStar/AddNewMovieStar/" class="btn btn-info mb-3">Filme Oyuncu Ekle +</a>
    

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Film ve Oyuncular</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Film</th>
                                        <th>Oyuncular</th>
                                        <th>#Oyuncu Çıkar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MovieName</td>
                                            <td>
                                                @if (item.StarNames.Any())
                                                {
                                                    <ul>
                                                        @foreach (var star in item.StarNames)
                                                        {
                                                            <li>@star</li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span>Oyuncu bulunamadı.</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="RemoveMovieStar" asp-route-movieName="@item.MovieName" class="btn btn-danger text-white">Oyuncu Çıkar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Film</th>
                                        <th>Oyuncular</th>
                                        <th>#Oyuncu Çıkar</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
