@model CinemaSystem.Models.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">

<body>

    <!-- ==========Overlay========== -->
    <div class="overlay"></div>
    <a href="#0" class="scrollToTop">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- ==========Overlay========== -->
    <!-- ==========Banner-Section========== -->
    <section class="banner-section">
        <div class="banner-bg bg_img bg-fixed" data-background="@Url.Content("~/MovieTemp/assets/images/banner/banner01.jpg")"></div>
        <div class="container">
            <div class="banner-content">
                <h1 class="title bold"> <span class="color-theme">Hoş geldiniz</span></h1>
                <p>
                    Sinema biletlerini önceden satın alın, film saatlerini bulun, fragmanları izleyin, film incelemelerini okuyun ve çok daha fazlasını yapın
                </p>
            </div>
        </div>
    </section>
    <!-- ==========Movie-Section========== -->
    <section class="movie-section padding-top padding-bottom">
        <div class="container">
            <div class="row flex-wrap-reverse justify-content-center">
                <div class="col-sm-10 col-md-8 col-lg-3">
                    <div class="widget-1 widget-banner">
                        <div class="widget-1-body">
                            <a href="#0">
                                <img src="~/MovieTemp/assets/images/sidebar/banner/banner01.jpg" alt="banner">
                            </a>
                        </div>
                    </div>
                    <div class="widget-1 widget-check">
                        <div class="widget-header">
                            <h5 class="m-title">Filtrele</h5> <a href="#0" class="clear-check">Hepsini Temizle</a>
                        </div>
                        <div class="widget-1-body">
                            <h6 class="subtitle">Dil</h6>
                            <div class="check-area">
                                <div class="form-group">
                                    <input type="checkbox" name="lang" id="lang1"><label for="lang1">Türkçe</label>
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" name="lang" id="lang2"><label for="lang2">Altyazılı</label>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="widget-1 widget-check">
                        <div class="widget-1-body">
                            <h6 class="subtitle">Deneyim</h6>
                            <div class="check-area">
                                <div class="form-group">
                                    <input type="checkbox" name="mode" id="mode1"><label for="mode1">2d</label>
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" name="mode" id="mode2"><label for="mode2">3d</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="widget-1 widget-check">
                        <div class="widget-1-body">
                            <h6 class="subtitle">Tür</h6>
                            <div class="check-area">
                                @foreach (var item in Model.categories)
                                {

                                    <div class="form-group">
                                        <input type="checkbox" name="category" id="@item.Id"><label for="@item.Name">@item.Name</label>
                                    </div>


                                }
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-9 mb-50 mb-lg-0">
                    <div class="filter-tab tab">
                        <div class="filter-area">
                            <div class="filter-main">
                                <div class="left">
                                    <div class="item">
                                        <span class="show">Göster :</span>
                                        <select class="select-bar">
                                            <option value="12">12</option>
                                            <option value="15">15</option>
                                            <option value="18">18</option>
                                            <option value="21">21</option>
                                            <option value="24">24</option>
                                            <option value="27">27</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>

                                </div>
                                <ul class="grid-button tab-menu">
                                    <li class="active">
                                        <i class="fas fa-th"></i>
                                    </li>
                                    <li>
                                        <i class="fas fa-bars"></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-area">
                            <div class="tab-item active">
                                <div class="row mb-10 justify-content-center">
                                    @foreach (var item in Model.movies)
                                    {
                                        <div class="col-sm-6 col-lg-4">
                                            <div class="movie-grid">
                                                <div class="movie-thumb c-thumb">
                                                    <a asp-controller="Movie" asp-action="Description" asp-route-name="@item.Name">
                                                        <img src="@item.Picture" alt="movie">
                                                    </a>
                                                </div>
                                                <div class="movie-content bg-one">
                                                    <h5 class="title m-0">
                                                        <a asp-controller="Movie" asp-action="Description" asp-route-name="@item.Name">@item.Name</a>
                                                    </h5>
                                                    <ul class="movie-rating-percent">
                                                        <li>
                                                            <div class="thumb">
                                                                <img src="~/MovieTemp/assets/images/movie/imdb.jpg" alt="movie">
                                                            </div>
                                                            <span class="content">@item.Score</span>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="tab-item">
                                <div class="movie-area mb-10">
                                    @foreach (var item in Model.movies)
                                    {
                                        <div class="movie-list">
                                            <div class="movie-thumb c-thumb">
                                                <a href="~/Movie/Description?name=@item.Name" class="w-100 bg_img h-100" data-background="@item.Picture">
                                                    <img class="d-sm-none" src="@item.Picture" alt="movie">
                                                </a>
                                            </div>
                                            <div class="movie-content bg-one">
                                                <h5 class="title">
                                                    <a asp-controller="Movie" asp-action="Description" asp-route-name="@item.Name">@item.Name</a>
                                                </h5>
                                                <p class="duration">@item.ScreenTime</p>

                                                <div class="movie-tags">
                                                    <a href="#0">@item.Category</a>

                                                </div>
                                                <ul class="movie-rating-percent">
                                                    <li>
                                                        <div class="thumb">
                                                            <img src="~/MovieTemp/assets/images/movie/imdb.jpg" alt="movie">
                                                        </div>
                                                        <span class="content">@item.Score</span>
                                                    </li>
                                                </ul>
                                                <div class="book-area">
                                                    <div class="book-ticket">
                                                        <div class="react-item mr-auto">
                                                            <a href="/Ticket/Reserve?name=@item.Name">
                                                                <div class="thumb">
                                                                    <img src="~/MovieTemp/assets/images/icons/book.png" alt="icons">
                                                                </div>
                                                                <span>Bilet Al</span>
                                                            </a>
                                                        </div>
                                                        <div class="react-item">
                                                            <a href="@item.Trailer" class="popup-video">
                                                                <div class="thumb">
                                                                    <img src="~/MovieTemp/assets/images/icons/play-button.png" alt="icons">
                                                                </div>
                                                                <span>Fragmanı İzle</span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }


                                </div>
                            </div>
                            <div class="pagination-area text-center">
                                <a href="#0"><i class="fas fa-angle-double-left"></i><span>Önceki</span></a>
                                <a href="#0">1</a>
                                <a href="#0">2</a>
                                <a href="#0" class="active">3</a>
                                <a href="#0">4</a>
                                <a href="#0">5</a>
                                <a href="#0"><span>Sonraki</span><i class="fas fa-angle-double-right"></i></a>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>
    <!-- ==========Movie-Section========== -->

</body>
</html>