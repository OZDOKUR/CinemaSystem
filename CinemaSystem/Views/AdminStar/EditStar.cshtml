@model Entities.Concrete.Star
@{
    ViewData["Title"] = "EditStar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="EditStar" method="post" enctype="multipart/form-data" class="pt-35px">
    <div class="form-group">
        <label asp-for="Name">Oyuncu Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Oyuncu Resmi</label>
        <div>
            <img src="@Model.Picture" alt="Oyuncu Resmi" style="max-width: 200px; max-height: 200px;"></img>
        </div>
        <input type="file" name="PictureFile" class="form-control" />
        <input type="hidden" name="ExistingPicture" value="@Model.Picture" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <button class="btn btn-info">Kaydet</button>
</form>
